<Activity mc:Ignorable="sap sap2010" x:Class="WriteToERP" xmlns="http://schemas.microsoft.com/netfx/2009/xaml/activities"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:sap="http://schemas.microsoft.com/netfx/2009/xaml/activities/presentation"
 xmlns:sap2010="http://schemas.microsoft.com/netfx/2010/xaml/activities/presentation"
 xmlns:scg="clr-namespace:System.Collections.Generic;assembly=mscorlib"
 xmlns:sd="clr-namespace:System.Data;assembly=System.Data"
 xmlns:ui="http://schemas.uipath.com/workflow/activities"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <x:Members>
    <x:Property Name="in_Data" Type="InArgument(sd:DataTable)" />
  </x:Members>
  <Sequence DisplayName="ERP Data Entry" sap:VirtualizedContainerService.HintSize="376,400">
    <sap:WorkflowViewStateService.ViewState>
      <scg:Dictionary x:TypeArguments="x:String, x:Object">
        <x:Boolean x:Key="IsExpanded">True</x:Boolean>
      </scg:Dictionary>
    </sap:WorkflowViewStateService.ViewState>
    <ui:LogMessage DisplayName="Log Start ERP" Level="Info" Message="[&quot;Starting ERP Transaction Entry...&quot;]" />
    
    <sap2010:Annotation.AnnotationText>
      This sequence simulates interacting with an SAP or Web-based ERP system.
      It iterates through the extracted data and inputs it into the system forms.
    </sap2010:Annotation.AnnotationText>
    
    <ui:ForEachRow CurrentIndex="{x:Null}" DataTable="[in_Data]" DisplayName="For Each Invoice" sap:VirtualizedContainerService.HintSize="334,200">
      <ui:ForEachRow.Body>
        <ActivityAction x:TypeArguments="sd:DataRow">
          <ActivityAction.Argument>
            <DelegateInArgument x:TypeArguments="sd:DataRow" Name="row" />
          </ActivityAction.Argument>
          <Sequence DisplayName="Input Fields" sap:VirtualizedContainerService.HintSize="200,66">
            <ui:LogMessage DisplayName="Log Entry" Level="Trace" Message="[&quot;Entering Invoice: &quot; + row(&quot;InvoiceNumber&quot;).ToString]" />
            <ui:Comment DisplayName="Simulation"Text="Simulate 'Type Into' Vendor Field" />
            <ui:Comment DisplayName="Simulation"Text="Simulate 'Type Into' Amount Field" />
            <ui:Comment DisplayName="Simulation"Text="Simulate 'Click' Submit Button" />
          </Sequence>
        </ActivityAction>
      </ui:ForEachRow.Body>
    </ui:ForEachRow>
    
    <ui:LogMessage DisplayName="Log Success" Level="Info" Message="[&quot;All transactions posted to ERP successfully.&quot;]" />
  </Sequence>
</Activity>
